<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomKeyboard">
        <attr name="keyPadding" format="dimension" />
        <attr name="keyTopPadding" format="dimension" />
        <attr name="keyTextSize" format="dimension" />
        <attr name="keyTextColor" format="color" />
        <attr name="keyNormalColor" format="color" />
        <attr name="keyDrawableSize" format="dimension" />
        <attr name="keyPressColor" format="color" />
    </declare-styleable>

    <declare-styleable name="KeyboardEditText">
        <attr name="pointInputEnable" format="boolean" />
        <attr name="keyboardType" format="enum">
            <enum name="number" value="0" />
            <enum name="idNumber" value="1" />
            <enum name="number2letter" value="2" />
            <enum name="letter2number" value="3" />
            <enum name="numPwd" value="4" />
        </attr>
    </declare-styleable>


    <declare-styleable name="CheckKeyboardEditText">
        <attr name="checkMode" format="enum">
            <enum name="idNumber" value="0" />
            <enum name="name" value="1" />
            <enum name="phone" value="2" />
            <enum name="phoneCode" value="3" />
        </attr>
        <attr name="checkPassColor" format="color" />
        <attr name="checkErrorColor" format="color" />
        <attr name="drawableEnable" format="boolean" />
    </declare-styleable>
</resources>